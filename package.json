{
  "name": "cucumber-and-puppeteer",
  "version": "1.0.0",
  "description": "A Node.js template for end-to-end testing your app with Cucumber.js and Puppeteer",
  "main": "index.js",
  "scripts": {
    "start": "npx cucumber-js --format ./features/support/formatter/PrettyFormatter",
    "test": "jest --verbose",
    "test-server": "http-server -p 8080 ./test/html",
    "test-coverage": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patheard/cucumber-and-puppeteer.git"
  },
  "keywords": [
    "cucumber",
    "puppeteer"
  ],
  "author": "Pat Heard <patrick.heard@tpsgc-pwgsc.gc.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patheard/cucumber-and-puppeteer/issues"
  },
  "homepage": "https://github.com/patheard/cucumber-and-puppeteer#readme",
  "dependencies": {
    "cucumber": "^5.1.0",
    "puppeteer": "^1.13.0"
  },
  "devDependencies": {
    "codecov": "^3.2.0",
    "http-server": "^0.11.1",
    "jest": "^24.1.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "./test/jest.setup.js"
    ]
  }
}
